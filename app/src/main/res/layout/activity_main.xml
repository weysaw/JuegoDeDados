<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balut"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/dado4"
        app:layout_constraintEnd_toEndOf="@+id/tirar"
        app:layout_constraintHorizontal_bias="0.657"
        app:layout_constraintStart_toStartOf="@+id/tirar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666" />

    <ImageView
        android:id="@+id/dado1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/dado2"
        app:layout_constraintEnd_toStartOf="@+id/dado2"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dado2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/dado2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/dado3"
        app:layout_constraintEnd_toStartOf="@+id/dado3"
        app:layout_constraintStart_toEndOf="@+id/dado1"
        app:layout_constraintTop_toTopOf="@+id/dado3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/dado3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tirar"
        app:layout_constraintEnd_toEndOf="@+id/tirar"
        app:layout_constraintStart_toStartOf="@+id/tirar"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/dado4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/dado3"
        app:layout_constraintEnd_toStartOf="@+id/dado5"
        app:layout_constraintStart_toEndOf="@+id/dado3"
        app:layout_constraintTop_toTopOf="@+id/dado3"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/dado5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/dado4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toEndOf="@+id/dado4"
        app:layout_constraintTop_toTopOf="@+id/dado4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/tirar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:onClick="lanzarDados"
        android:text="Tirar Los Dados"
        app:layout_constraintBottom_toTopOf="@+id/puntaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dado2" />

    <TextView
        android:id="@+id/puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos: "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/puntaje"
        app:layout_constraintEnd_toEndOf="@+id/ronda"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ronda"
        app:layout_constraintTop_toTopOf="@+id/puntaje"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/puntaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal"
        android:text="Puntaje Total: "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/roll"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tirar" />

    <TextView
        android:id="@+id/ronda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:text="Ronda: / 28"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/roll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/roll"
        app:layout_constraintTop_toTopOf="@+id/roll"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll:  / 3"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/ronda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puntaje" />

    <include
        android:id="@+id/tablero"
        layout="@layout/tablero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roll" />

</androidx.constraintlayout.widget.ConstraintLayout>